---
import proyectos from "../data/proyectos.json"

---

<section id="Proyectos" class="h-screen">
    <h1 class="flex justify-center text-[#76D42F] text-[35px] font-jaro p-[40px]"><a href="#inicio">PROJECTS</a></h1>
    <div class="flex justify-center text-white gap-[30px] border-black">
        {proyectos.map((proyecto) => (
            <div class="text-[#f5f5f5] flex flex-col border-4 border-black w-[300px]">
                    <img src={proyecto.img} alt="" class="w-full h-40 object-cover rounded-t-lg"/>
                <div class="flex flex-col p-4 flex-grow bg-black">
                    <h3 class="text-lg font-jetBrains mb-2 truncate">{proyecto.name}</h3>
                    <p class="text-[#f5f5f5] font-jetBrains">{proyecto.description}</p>
                </div>
            </div>
        ))}
    </div>
</section>